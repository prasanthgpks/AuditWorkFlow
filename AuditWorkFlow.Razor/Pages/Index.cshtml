@page
@model AuditWorkFlow.Razor.Pages.IndexModel

@{
    ViewData["Title"] = "Customers";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Add New Customer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerDtos[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerDtos[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerDtos[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerDtos[0].CountryCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerDtos[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerDtos[0].PanNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerDtos[0].StatusCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CustomerDtos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PanNumber)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusCode)
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
